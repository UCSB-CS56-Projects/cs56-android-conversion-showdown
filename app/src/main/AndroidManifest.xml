<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsb.cs56.projects.android.conversion_showdown">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="Conversion Showdown!"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Conversion Showdown!"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Conversion Showdown!" />
        <activity
            android:name=".baseCalculator"
            android:label="Conversion Showdown!"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Introduction"
            android:label="Conversion Showdown!" />
        <activity
            android:name=".Calculator"
            android:label="Conversion Showdown!" />
        <activity
            android:name=".QuizSelection"
            android:label="Conversion Showdown!" />
        <activity
            android:name=".Quiz"
            android:label="Conversion Showdown!"
            android:parentActivityName=".Introduction">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.ucsb.cs56.projects.android.conversion_showdown.Introduction" />
        </activity>
        <activity
            android:name=".ScoreReport"
            android:label="Conversion Showdown!" />
        <activity android:name=".TestActivity1" />
        <activity android:name=".TestActivity2" />
        <activity android:name=".SwiperCalculatorActivity">

            <!-- Requires fragments to allow user to switch calculator by swiping -->
        </activity>
        <activity android:name=".ConverterActivity" />
